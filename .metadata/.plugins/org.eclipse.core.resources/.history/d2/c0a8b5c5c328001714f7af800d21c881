package textExcel;

// Update this file with your own code.

public class Spreadsheet implements Grid
{
	int rows = 20;
	int cols = 12;
	Cell[][] cellSpreadSheet;
	String grid;
	
	public Spreadsheet(){
		cellSpreadSheet = new Cell[rows][cols];
		for(int i = 0; i < rows; i ++){
			for(int j =0; j < cols; j++){
				cellSpreadSheet[i][j] = new EmptyCell();
			}
		}
	}
	public void makeGrid(){
		grid = "   |";
		char letter = 'A';
		for(int i = 0; i < 12; i++){
			grid =  grid + letter + "         |"; 
			letter++;
		}
		grid = grid + "\n1  ";
		for(int i = 0; i < 20; i++){
			for(int j = 0; j < 12; j++){
				grid = grid + "|          ";
			}
			int index  = i + 2;
			if(index >= 21){
				grid = grid + "|" + "\n";
			}else{
				grid = grid + "| " + "\n" + index + " ";
				if(index < 10){
					grid = grid + " ";
				}
			}
		}
	}
	
	@Override

	public String processCommand(String command)
	{
		if(command.equals("clear")){
			return grid;
		}
		return "";
	}
	
	
	@Override
	
	
	public int getRows()
	{
		// TODO Auto-generated method stub
		return this.rows;
	}

	@Override
	public int getCols()
	{
		// TODO Auto-generated method stub
		return this.cols;
	}

	@Override
	public Cell getCell(Location loc)
	{
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public String getGridText()
	{
		// TODO Auto-generated method stub
		return grid;
	}

}
